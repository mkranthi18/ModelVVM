<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ModelVVM.MyPage">
    <ContentPage.Content>
        <StackLayout Padding="20">

        <Label Text="Sign In" TextColor="Black" FontSize="20" ></Label>
            <Entry x:Name="UserName" Placeholder="User Name" WidthRequest="150"></Entry>
<Entry x:Name="Passcode" Placeholder="Type Password" WidthRequest="150"></Entry>
        <StackLayout Orientation="Horizontal">
            <!--How is this line-->
            <Button BackgroundColor="Black" TextColor="White" Text="Login" Clicked="Login_Clicked" ></Button>
            <Button BackgroundColor="Black" TextColor="White" Text="Sign Up" Clicked="Signup_Clicked_1" ></Button>
            </StackLayout>
            <StackLayout Orientation="Vertical">

                <Label Text="Date of Login" FontSize="12" TextColor="Black" VerticalOptions="End"></Label>
                <DatePicker x:Name="Date">
                </DatePicker>
                </StackLayout>
        <StackLayout Orientation="Vertical">
            <Slider BackgroundColor="Black" Minimum="0" Maximum="100"></Slider>         
           </StackLayout>
        </StackLayout>
 
    </ContentPage.Content>
</ContentPage>
