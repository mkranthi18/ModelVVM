<?xml version="1.0" encoding="utf-8"?>
namespace ModelVVM.Model
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ModelVVM" x:Class="ModelVVM.LoginPage">
<StackLayout Padding="20">
// Location of Label and Placeholders.
        <Label Text="Sign In" TextColor="Black" FontSize="20" ></Label>
            <Entry x:Name="Name" Placeholder="First Name" WidthRequest="150"></Entry>
<Entry x:Name="Passcode" Placeholder="Type Password" WidthRequest="150"></Entry>
        <StackLayout Orientation="Horizontal">
           
            <Button BackgroundColor="Black" TextColor="White" Text="Login" Clicked="Handle_Clicked" ></Button>
            <Button BackgroundColor="Black" TextColor="White" Text="Sign Up" ></Button>
            </StackLayout>
            <StackLayout Orientation="Vertical">

                <Label Text="Date of Login" FontSize="12" TextColor="Black" VerticalOptions="End"></Label>
                <DatePicker x:Name="Date">
                </DatePicker>
                </StackLayout>
        <StackLayout Orientation="Vertical">
            <Slider BackgroundColor="Black" Minimum="0" Maximum="100"></Slider>         
           </StackLayout>
        </StackLayout>
    </ContentPage>             
